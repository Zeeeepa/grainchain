# Grainchain Dashboard Configuration

# =============================================================================
# App Configuration
# =============================================================================
DEBUG=false
HOST=localhost
PORT=3000
SECRET_KEY=change-this-in-production-to-a-secure-random-string
ENCRYPTION_KEY=optional-encryption-key-for-sensitive-data

# =============================================================================
# Data Storage
# =============================================================================
DATA_DIR=./data
CONFIG_FILE=./data/dashboard_config.json

# =============================================================================
# Provider Configuration
# =============================================================================
DEFAULT_PROVIDER=local
PROVIDER_TIMEOUT=300

# =============================================================================
# Local Provider Settings
# =============================================================================
LOCAL_WORKING_DIR=./workspace
LOCAL_TIMEOUT=60

# =============================================================================
# E2B Provider Settings
# =============================================================================
# Get your API key from: https://e2b.dev/dashboard
E2B_API_KEY=your-e2b-api-key-here
E2B_TEMPLATE=base
E2B_TIMEOUT=300

# =============================================================================
# Daytona Provider Settings  
# =============================================================================
# Get your API key from: https://daytona.io/
DAYTONA_API_KEY=your-daytona-api-key-here
DAYTONA_WORKSPACE_TEMPLATE=python-dev
DAYTONA_TIMEOUT=300

# =============================================================================
# Morph Provider Settings
# =============================================================================
# Get your API key from: https://morph.dev/
MORPH_API_KEY=your-morph-api-key-here
MORPH_IMAGE_ID=morphvm-minimal
MORPH_VCPUS=2
MORPH_MEMORY=2048
MORPH_DISK_SIZE=8192

# =============================================================================
# Modal Provider Settings
# =============================================================================
# Get your tokens from: https://modal.com/
MODAL_TOKEN_ID=your-modal-token-id-here
MODAL_TOKEN_SECRET=your-modal-token-secret-here
MODAL_TIMEOUT=300

# =============================================================================
# Dashboard Features
# =============================================================================
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true
ENABLE_COLLABORATION=false

# =============================================================================
# Security Settings
# =============================================================================
# Generate a secure secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY=your-secure-secret-key-here

# Optional encryption key for sensitive data storage:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# Development Settings
# =============================================================================
# Uncomment for development
# DEBUG=true
# HOST=0.0.0.0
# PORT=3000

# =============================================================================
# Production Settings
# =============================================================================
# Uncomment for production deployment
# DEBUG=false
# HOST=0.0.0.0
# PORT=8000
# SECRET_KEY=your-production-secret-key
# ENCRYPTION_KEY=your-production-encryption-key

